
  <div class="col-md-20">
    <div class="card">
      <div class="card-body align-items-center">
        <form action="/resultTest/{{note._id}}" method="POST">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ note.title }} 
        </h4>
        {{#each note.preguntas}}
         <p>{{ this }}</p>
          <div class="input-group">
    				<div id="radioBtn" class="btn-group">
                    <div class="radio radio-info radio-inline">
                        <input type="radio" id="inlineRadio1" value="V" name="respuesta{{@index}}" checked>
                        <label for="inlineRadio1"> Verdadero </label>
                    </div>
                    <div class="radio radio-inline">
                        <input type="radio" id="inlineRadio2" value="F" name="respuesta{{@index}}">
                        <label for="inlineRadio2"> Falso </label>
                    </div>
    				</div>
    			</div>
         {{/each}}
        <p>{{ note.description }}</p>
        <button type="submit" class="btn btn-primary">Enviar Resultados</button>
        </form>
         </div>
         </div>
         </div>

  
  
